</head>
<body>
    
    
        <section id="sideMenu">
        
            <nav>
              <a class="active" href="/cwcHome/<%= district%>/<%=cwcOfficialName%>"><i class="  fa fa-building" aria-hidden="true"></i>CWC HOME</a>
                <a class="active current " href="/addChild/<%= district%>/<%=cwcOfficialName%>"><i class="current2 fa fa-id-badge" aria-hidden="true"></i>Child Registration</a>
                <a class="active" href="/addCci/<%= district%>/<%=cwcOfficialName%>"><i class="fa fa-building" aria-hidden="true"></i>CCI Registration</a>
                <a class="active" href="#"><i class="fa fa-id-badge" aria-hidden="true"></i>Employee Registration</a>
                <a class="active" href="/recommendation/<%= district%>/<%=cwcOfficialName%>"><i class="fa fa-list-alt" aria-hidden="true"></i>Eligibility Pool</a>
                <a class="active" href="/cciInfo/<%= district%>/<%=cwcOfficialName%>"><i class="fa fa-info" aria-hidden="true"></i> CCI Details</a>
            </nav>
        </section>
        <header>
            <div class="logo">CARE</div>
            <div class="logo">WELCOME <%=cwcOfficialName%></div>
            <div class="user-field">
               
                <a href="#">
                    <i class="fa fa-user-circle" aria-hidden="true"></i> 
                <i class="fa fa-caret-down" aria-hidden="true"></i>
                </a>
                
            </div>
                
                               
        </header>
        <section id="content-area">
          <div class="form-container">
          <div class="heading">
              <h4>New Child Registration Portal</h4>
          </div>
          <div class="main">
            <form method="post" action="/addChild ">
              <div class="form-group">
                <label class="name" for="">Name Of Child</label>
                       
               <div class="row position">
               
                   <div class="col-lg-6">
                       
                       <input type="text" name="fname" id="name" class="full_name" placeholder="First Name">
                   </div>
                   <div class="col-lg-6">
                       
                       
                      <input type="text" name="lname" class="child-age" placeholder="Last Name">
                   </div>
               </div>
               <label class="name" for="">AGE</label>
               <input type="text" name="age" id="name" class="cci-address" placeholder="Age in Years">
                   
               <div>
              <label class="name" for="">Name Of CCI</label>
                <select name="cci_name" class="option1">
                    <option disabled="disabled" selected="selected">-----------------Select CCI----------------</option>
                    <% cci.forEach(function(cci){ %>
                        
                        <%  if(cci.cci_name != "Sample"){ %>
                             <option>
                              <%= cci.cci_name;%>
                             </option>
                       <%    }  %>
                       <%  });  %>
                    
                </select>
                
               </div>
               
                <label for="" class="name">DATE WHEN THE CHILD WAS FOUND</label>
                <input type="date" class="date" name="reg_date" placeholder="dd-mm-yyyy"> 
                <div class="row pos">
                    <label for="" class="name">GENDER</label>
                </div>
                <div class="row pos">
                    
                    <label for="" class="radio name">
                        <input type="radio" value="M" class="radio-one" name="gender">
                        <span class="checkmark"></span>
                        Male
                    </label>
                    <label for="" class="radio name">
                        <input type="radio" value="F" class="radio-one" name="gender">
                        <span class="checkmark"></span>
                        Female
                    </label>
                    <label for="" class="radio name">
                        <input type="radio" value="F" class="radio-one" name="gender">
                        <span class="checkmark"></span>
                        Others
                    </label>
                </div>
                <label for="" class="name">CWC WITNESS</label>
                <input type="text" class="cwc" name="witness" placeholder="CWC Official(ID)">
                <div class="row name pos">
                    <input type="checkbox" name="confirm">
                    <label for="" class="check">CONFIRM</label>
                </div>
               
              <button type="e" class="btn">REGISTER</button>

            </div>

            </form>
             
          </div>
      </div>
      </section>
     
       
    
    
